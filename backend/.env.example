# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DB_NAME=manage_network_projects

# JWT Security Configuration
# ⚠️ IMPORTANT: Change this to a secure random string!
# Generate with: openssl rand -hex 32
# Or PowerShell: -join ((65..90) + (97..122) + (48..57) | Get-Random -Count 64 | ForEach-Object {[char]$_})
JWT_SECRET=your-very-secure-random-secret-key-minimum-32-characters
JWT_ALG=HS256
ACCESS_TOKEN_EXPIRE_MIN=1440

# Ollama — Remote server (Scope 2.3.5)
# Used by llm_service (Analysis) and topology_service (Topology generation)
OLLAMA_BASE_URL=http://10.4.15.152:11434
OLLAMA_MODEL=deepseek-coder-v2:16b
OLLAMA_TIMEOUT=300

# Topology: use LLM for topology generation (true) or rule-based only (false)
TOPOLOGY_USE_LLM=true

